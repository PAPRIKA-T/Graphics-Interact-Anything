/*******************QCheckBox*********************/
QCheckBox::indicator
{/*选择框尺寸*/
    border: 0px;
	width: 13px;
	height: 13px;
}

QCheckBox::indicator:checked
{
	image: url(:/res/qss/GenericStyle/background-image/checkbox.png);
}

QCheckBox::indicator:unchecked
{
	image: url(:/res/qss/GenericStyle/background-image/uncheckbox.png);
}

