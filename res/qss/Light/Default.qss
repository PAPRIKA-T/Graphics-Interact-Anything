/*******************QComboBox*********************/
QComboBox
{   
    color:#fe5820;
    background-color:transparent;
    border: none;
    font-size:13px;
    border-radius: 6px;
}

QComboBox::drop-down {
      subcontrol-origin: padding;
      width: 15px;
      border:none;
  }

/* 下拉箭头样式 */
QComboBox::down-arrow 
{
    width: 15px; /* 下拉箭头的宽度（建议与下拉框drop-down的宽度一致） */
    background: transparent; /* 下拉箭头的的背景色 */
    padding: 0px 0px 0px 0px; /* 上内边距、右内边距、下内边距、左内边距 */
 
    image: url(:/res/qss/Dark/background-image/left_arrow.png);
}

/* 点击下拉箭头 */
QComboBox::down-arrow:on 
{ 
    image: url(:/res/qss/Dark/background-image/bottom_arrow.png); /* 显示上拉箭头 */
}

/*******************QSlider*********************/
QSlider::handle:horizontal 
{
    background: orange; /* 滑块颜色 */
    border: none; /* 滑块边框颜色 */
    width: 16px; /* 滑块宽度 */
    height: 16px; /* 滑块高度，使其成为圆形 */
    margin: -5px 0; /* 控制滑块位置 */
    border-radius: 10px; /* 设置圆形滑块 */
}

